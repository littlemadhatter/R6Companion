<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/d16"
        android:paddingTop="@dimen/d16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/unit_operator_one"
                android:layout_width="@dimen/unit_operator"
                android:layout_height="@dimen/unit_operator"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:background="@drawable/yellow_bg"
                android:padding="@dimen/d2" />


            <ImageView
                android:id="@+id/unit_operator_two"
                android:layout_width="@dimen/unit_operator"
                android:layout_height="@dimen/unit_operator"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:background="@drawable/yellow_bg"
                android:padding="@dimen/d2" />

            <ImageView
                android:id="@+id/unit_operator_three"
                android:layout_width="@dimen/unit_operator"
                android:layout_height="@dimen/unit_operator"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:background="@drawable/yellow_bg"
                android:padding="@dimen/d2" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>
