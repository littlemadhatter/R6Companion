<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/d8">
        
        <ImageView
            android:layout_width="@dimen/icon_main_randomW"
            android:padding="@dimen/d8"
            android:layout_marginBottom="@dimen/d8"
            android:id="@+id/random_icon"
            android:layout_height="@dimen/icon_main_randomH" />

        <ImageView
            android:layout_width="@dimen/icon_mainB_randomW"
            android:padding="@dimen/d8"
            android:layout_marginBottom="@dimen/d8"
            android:id="@+id/random_profile"
            android:layout_height="@dimen/icon_mainB_randomW" />

        <Button
            android:id="@+id/random_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/random_buttonH"
            android:layout_marginBottom="@dimen/d8"
            android:background="@color/colorAccent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="@dimen/d4"
            android:paddingLeft="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:paddingTop="@dimen/d4"
            android:text="@string/k_random"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_four" />

    </LinearLayout>
</ScrollView>
