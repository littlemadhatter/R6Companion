<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/d8"
        android:paddingTop="@dimen/d8">



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d8"
                    android:id="@+id/gadget_title"
                    android:text="Placeholder text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_one" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d8"
                    android:id="@+id/gadget_byline"
                    android:text="Placeholder text"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />


                <ImageView
                    android:layout_width="@dimen/gadget_imageW"
                    android:layout_height="@dimen/gadget_imageH"
                    android:padding="@dimen/d8"
                    android:id="@+id/gadget_image"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d8"
                    android:gravity="center"
                    android:id="@+id/linear_one"
                    android:orientation="horizontal"
                    android:padding="@dimen/d8">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/d8"
                        android:paddingLeft="@dimen/d16"
                        android:paddingRight="@dimen/d16"
                        android:paddingTop="@dimen/d8"
                        android:text="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_one" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Placeholder text"
                        android:id="@+id/gadget_one"
                        android:textColor="@color/colorWhiteTwo"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d8"
                    android:gravity="center"
                    android:id="@+id/linear_two"
                    android:orientation="horizontal"
                    android:padding="@dimen/d8">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/d8"
                        android:paddingLeft="@dimen/d16"
                        android:paddingRight="@dimen/d16"
                        android:paddingTop="@dimen/d8"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_one" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Placeholder text"
                        android:id="@+id/gadget_two"
                        android:textColor="@color/colorWhiteTwo"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d8"
                    android:gravity="center"
                    android:id="@+id/linear_three"
                    android:orientation="horizontal"
                    android:padding="@dimen/d8">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/d8"
                        android:paddingLeft="@dimen/d16"
                        android:paddingRight="@dimen/d16"
                        android:paddingTop="@dimen/d8"
                        android:text="3"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_one" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:id="@+id/gadget_three"
                        android:text="Placeholder text"
                        android:textColor="@color/colorWhiteTwo"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Primary Gadget"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:id="@+id/gadget_desc"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Placeholder text"
                    android:textColor="@color/colorWhiteTwo"
                    android:textSize="@dimen/text_size_three" />



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Secondary Gadget"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d8"
                            android:id="@+id/gadget_sec_one"
                            android:textColor="@color/colorWhiteTwo"
                            android:textSize="@dimen/text_size_three" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d8"
                            android:id="@+id/gadget_sec_one_count"
                            android:textColor="@color/colorWhiteTwo"
                            android:textSize="@dimen/text_size_three" />


                        <ImageView
                            android:layout_width="@dimen/gadget_sec_imageW"
                            android:layout_height="@dimen/gadget_sec_imageH"
                            android:padding="@dimen/d4"
                            android:id="@+id/gadget_sec_one_image" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/d8"
                        android:text="(or)"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_three" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d8"
                            android:id="@+id/gadget_sec_two"
                            android:textColor="@color/colorWhiteTwo"
                            android:textSize="@dimen/text_size_three" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d8"
                            android:id="@+id/gadget_sec_two_count"
                            android:textColor="@color/colorWhiteTwo"
                            android:textSize="@dimen/text_size_three" />


                        <ImageView
                            android:layout_width="@dimen/gadget_sec_imageW"
                            android:layout_height="@dimen/gadget_sec_imageH"
                            android:padding="@dimen/d4"
                            android:id="@+id/gadget_sec_two_image"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_gravity="center_horizontal"
            card_view:cardBackgroundColor="@color/colorDarkFour">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Operator Tips"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:id="@+id/gadget_tip"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Placeholder text"
                    android:textColor="@color/colorWhiteTwo"
                    android:textSize="@dimen/text_size_three" />



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_gravity="center_horizontal"
            card_view:cardBackgroundColor="@color/colorDarkFour">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Operator Combination"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gadget_combine"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Placeholder text"
                    android:textColor="@color/colorWhiteTwo"
                    android:textSize="@dimen/text_size_three" />



            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_gravity="center_horizontal"
            card_view:cardBackgroundColor="@color/colorDarkFour">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d16"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Operator Counter"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gadget_counter"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d16"
                    android:text="Placeholder text"
                    android:textColor="@color/colorWhiteTwo"
                    android:textSize="@dimen/text_size_three" />



            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_gravity="center_horizontal"
            card_view:cardBackgroundColor="@color/colorDarkFour">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d16"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <Button
                    android:id="@+id/gadget_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/submit_tip_buttonH"
                    android:background="@color/colorAccent"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingLeft="@dimen/d16"
                    android:paddingRight="@dimen/d16"
                    android:paddingTop="@dimen/d4"
                    android:text="Submit Tips"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_four" />



            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>
