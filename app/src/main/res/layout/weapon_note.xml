<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    card_view:cardBackgroundColor="@color/colorDarkFour">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="EXTRA NOTES"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_three" />


        <EditText
            android:id="@+id/weapon_editnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:hint="@string/k_notes_hint"
            android:minHeight="50dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/colorWhiteTwo"
            android:textColorHint="#BDBDBD"
            android:textSize="@dimen/text_size_four" />

        <Button
            android:id="@+id/weapon_editbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorAccent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:text="Save"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_four" />


    </LinearLayout>

</android.support.v7.widget.CardView>