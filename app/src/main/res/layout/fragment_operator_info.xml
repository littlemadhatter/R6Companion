<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/d8"
        android:paddingTop="@dimen/d8">


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/d8"
                android:paddingBottom="@dimen/d8"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/info_operator"
                    android:layout_height="@dimen/info_operator"
                    android:padding="@dimen/d2"
                    android:background="@drawable/yellow_bg"
                    android:id="@+id/operator_image"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/d16">

                <ImageView
                    android:layout_width="@dimen/info_speedW"
                    android:layout_height="@dimen/info_speedH"
                    android:id="@+id/operator_speed"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/k_name"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_three" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:id="@+id/operator_name"
                        android:layout_marginLeft="@dimen/d8"
                        android:layout_height="wrap_content"
                        android:text=":  Seamus Cowden"
                        android:textColor="@color/colorWhiteOne"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/d8"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/k_birth"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_three" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_marginLeft="@dimen/d8"
                        android:id="@+id/operator_dob"
                        android:layout_height="wrap_content"
                        android:text=":  April 2 , 1982"
                        android:textColor="@color/colorWhiteOne"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/k_height"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_three" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text=":  1.92 m"
                        android:id="@+id/operator_height"
                        android:layout_marginLeft="@dimen/d8"
                        android:textColor="@color/colorWhiteOne"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/d8"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/k_weight"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_three" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_marginLeft="@dimen/d8"
                        android:layout_height="wrap_content"
                        android:text=":  95 Kg"
                        android:id="@+id/operator_weight"
                        android:textColor="@color/colorWhiteOne"
                        android:textSize="@dimen/text_size_three" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/k_background"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/d16"
                    android:id="@+id/operator_background"
                    android:textColor="@color/colorWhiteOne"
                    android:textSize="@dimen/text_size_three" />


            </LinearLayout>


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/k_profile"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/d16"
                    android:id="@+id/operator_profile"
                    android:textColor="@color/colorWhiteOne"
                    android:textSize="@dimen/text_size_three" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/k_training"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/d16"
                    android:id="@+id/operator_training"
                    android:textColor="@color/colorWhiteOne"
                    android:textSize="@dimen/text_size_three" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/experience"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/d16"
                    android:id="@+id/operator_experience"
                    android:textColor="@color/colorWhiteOne"
                    android:textSize="@dimen/text_size_three" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorDarkFour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/d16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/k_notes"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/d16"
                    android:id="@+id/operator_notes"
                    android:textColor="@color/colorWhiteOne"
                    android:textSize="@dimen/text_size_three" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</ScrollView>
