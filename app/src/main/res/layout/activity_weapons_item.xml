<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_unit_operator"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fragment_weapon_item"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">


        </FrameLayout>


    </ScrollView>


    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottomnavigation_weapon_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="start"
        android:background="@color/colorDarkFive"
        app:itemIconTint="@color/selector_nav_bottom_main"
        app:itemTextColor="@color/selector_nav_bottom_main"
        app:menu="@menu/nav_bottom_weapon_item" />


</LinearLayout>
